{{#section 'css'}}
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">

{{/section}}

{{#section 'js'}}
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
</script>
<script>
    $('#DOB').datetimepicker({
        format: 'd/m/Y',
        timepicker: true,
        mask: true
    });
</script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.9/css/fileinput.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.9/js/fileinput.min.js"></script>
<script>
  $('#avatar').fileinput({
    theme: 'fa',
    showCaption: true,
    dropZoneEnabled: true,
    allowedFileExtensions: ['png', 'jpg', 'gif'],
    language: 'vi'
  });
</script>
{{/section}}
<div class="content-body">
    <div class="title-editor">
        <h4>Thông Tin Tài Khoản</h4>
    </div>
    <div class="panel panel-default profile">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <h2>Thông tin chi tiết</h2>
        </div>
        <form id="frmEditor" class="frmEditor" action="/user/profile" method="post" enctype='multipart/form-data'>
            <div class="form-group">
                {{!-- <label for="">Ảnh đại diện</label> --}}
                {{#if _user.avatar}}
                <img src="/public/img/img_avatar/{{_user.avatar}}" alt="" srcset="">
                {{else}}
                <img src="/public/img/img_avatar/default_user.png" alt="" srcset="">
                {{/if}}
            </div>
            <div class="form-group">
                <label for="">Tên Hiển Thị</label>
                <input type="text" name="display_name" id="display_name" value="{{_user.display_name}}">
            </div>
            <div class="form-group">
                <label for="">User name</label>
                <input type="text" name="user_name" id="user_name" value="{{_user.user_name}}">
            </div>
            <div class="form-group">
                <label for="">Ngày sinh</label>
                <input type="text" name="DOB" id="DOB" value="{{parseTime _user.DOB}}">
            </div>
            <div class="form-group">
                <label for="">Giới tính</label>
                <select name="gender" id="gender">
                    {{#if _user.gender}}
                    <option value="0">Nam</option>
                    <option value="1" selected>Nữ</option>
                    {{else}}
                    <option value="0" selected>Nam</option>
                    <option value="1">Nữ</option>
                    {{/if}}
                </select>
            </div>
            <div class="form-group">
                <label for="">email</label>
                <input type="text" name="email" id="email" value="{{_user.email}}">
            </div>
            <div class="form-group">
                <label>Avatar</label>
                <input id="avatar" name="avatar" type="file" class="file" data-browse-on-zone-click="true">
            </div>
            <hr>
            <div class="form-group flex">
                <button class="btn btn-success" type="submit" id="btnCapNhat">
                    <i class="fa fa-check" aria-hidden="true">&nbsp;</i>
                    Cập Nhật
                </button>
            </div>
        </form>
    </div>
</div>