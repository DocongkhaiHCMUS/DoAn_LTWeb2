        $("#pdf").on('click', function () {
            const element = document.getElementById("article-post");
            const title = document.getElementById("title").textContent;
            var opt = {
                margin: [8, 8],
                html2canvas: { scale: 2 },
                pagebreak: { mode: ['avoid-all'] }
            };
            // Choose the element and save the PDF for our user.
            html2pdf()
                .set(opt)
                .from(element)
                .save(`${title}.pdf`);
        })
    });
</script>

