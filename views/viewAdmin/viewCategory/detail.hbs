{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css">
{{/section}}

<!-- main content -->
<div class="wrapper">
    {{#if this.empty}}
    <div class="table-title">
        <h3>Không có thể loại cấp 2.</h3>
    </div>
    <a class="btn btn success" href="/admin/categorylv2/add/{{cat1ID}}" role="button" title="Thêm thể loại cấp 2">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Thêm thể loại loại cấp 2
    </a>
    {{else}}
    <div class="table-title">
        <h3>Danh sách thể loại cấp 2</h3>
    </div>
    <a class="btn btn success" href="/admin/categorylv2/add/{{cat1ID}}" role="button" title="Thêm thể loại cấp 2">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Thêm thể loại loại cấp 2
    </a>
    <br><br>
    <table class="table-fill">
        <thead>
            <tr>
                <th class="text-left">Tên thể loại</th>
                <th class="text-left">Ngày tạo</th>
                <th class="text-left">Chỉnh sửa lần cuối</th>
                <th class="text-left=">Tình trạng</th>
                <th class="text-left">&nbsp;</th>
            </tr>
        </thead>
        <tbody class="table-hover">
            {{#each this.category}}
            <tr>
                <td class="text-left"><b>{{name}}</b></td>
                <td class="text-left" id="txtDateCreate">{{parseTime create_date}}</td>
                <td class="text-left">{{parseTime modifile_date}}</td>
                {{#if delete}}
                <td class="text-center" style="color: red;">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                </td>
                {{else}}
                <td class="text-center">
                    <i class="fa fa-unlock" aria-hidden="true"></i>
                </td>
                {{/if}}
                <td class="text-right">
                    <a class="" href="/admin/categorylv2/edit/{{id}}" title="Chỉnh sửa">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}
    <div>
        <a class="btn btn success" href="/admin/category" role="button">
            <i class="fa fa-backward" aria-hidden="true"></i>
            Trở về
        </a>
    </div>

</div>
<!-- end main content -->