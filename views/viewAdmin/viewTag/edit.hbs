<!-- main content -->
<div class="wrapper">
    <form class="frm" id="frmEditCat" method="POST">
        <h4 class="title">Chi Tiết Nhãn</h4>
        <div class="form-group">
            <label for="id">ID</label>
            <input type="text" id="txtCatID" name="id" readonly value="{{this.tag.id}}">
        </div>
        <div class="form-group">
            <label for="name">Tên nhãn</label>
            <input type="text" id="name" name="name" value="{{this.tag.name}}" autofocus required>
        </div>
        <div class="form-group">
            <label for="">Mô tả</label>
            <textarea id="des" name="des">{{this.tag.des}}</textarea>
        </div>
        <hr>
        <div class="form-group d-flex">
            <a class="btn btn-primary" href="/admin/tag" role="button" title="Back to List">
                <i class="fa fa-backward" aria-hidden="true"></i>
            </a>
            {{#if this.tag.delete}}
            <button class="btn btn-success" type="submit" title="Khôi phục" formaction="/admin/tag/restore">
                <i class="fa fa-undo" aria-hidden="true"></i>
            </button>
            {{else}}
            <button class="btn btn-danger" type="submit" title="Xóa thể loại" formaction="/admin/tag/del">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
            {{/if}}
            <button class="btn btn-success" type="submit" formaction="/admin/tag/update">
                <i class="fa fa-check" aria-hidden="true"></i>
                Lưu
            </button>
        </div>
    </form>
</div>
<!-- end main content -->