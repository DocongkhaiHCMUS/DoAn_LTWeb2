<!DOCTYPE html>
<html>

<head>
    <title>Danh bài viết gắn nhãn</title>

    <meta name="viewport"
        content="width=device-width, height=device-height, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <link rel="icon" type="image/png" href="/public/img/logo-2.png" />

    <!-- Import lib -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css">
    <link rel="stylesheet" type="text/css" href="/public/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/font-awesome.min.css">
    <!-- End import lib -->

    <link rel="stylesheet" type="text/css" href="/public/css/admin.css">
    <style>
        @import url(https://fonts.googleapis.com/css?family=Roboto:400,500,700,300,100);

        .wrapper {
            background-color: #3e94ec;
            font-family: "Roboto", helvetica, arial, sans-serif;
            font-size: 16px;
            font-weight: 400;
            text-rendering: optimizeLegibility;
        }
    </style>
    {{{_sections.css}}}
</head>

<body class="overlay-scrollbar">

    <!-- navbar -->
    <div class="navbar">
        <!-- nav left -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link">
                    <i class="fa fa-bars" aria-hidden="true" onclick="collapseSidebar()"></i>
                </a>
            </li>
            <li class="nav-item">
                <a href="/admin">
                    <img src="/public/img/logo.png" alt="News24H logo" class="logo">
                </a>
            </li>
        </ul>
        <!-- end nav left -->
        <!-- form -->
        <form class="navbar-search">
            <input type="text" name="Search" class="navbar-search-input" placeholder="What you looking for...">
            <i class="fa fa-search" aria-hidden="true"></i>
        </form>
        <!-- end form -->
        <!-- nav right -->
        <ul class="navbar-nav nav-right">
            <li class="nav-item dropdown">
            </li>
            <li class="nav-item">
                <div class="avt dropdown">
                    <img src="/public/img/img_avatar/default_user.png" alt="User image" class="dropdown-toggle"
                        data-toggle="user-menu">
                    <ul id="user-menu" class="dropdown-menu">
                        <li class="dropdown-menu-item">
                            <a class="dropdown-menu-link">
                                <div>
                                    <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                                </div>
                                <span>Profile</span>
                            </a>
                        </li>
                        <li class="dropdown-menu-item">
                            <a href="#" class="dropdown-menu-link">
                                <div>
                                    <i class="fa fa-cog" aria-hidden="true"></i>
                                </div>
                                <span>Settings</span>
                            </a>
                        </li>
                        <li class="dropdown-menu-item">
                            <a href="/login/logout" class="dropdown-menu-link">
                                <div>
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                </div>
                                <span>Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
        <!-- end nav right -->
    </div>
    <!-- end navbar -->
    <!-- sidebar -->
    <div class="sidebar">
        <ul class="sidebar-nav">
            <li class="sidebar-nav-item">
                <a href="/admin/category" class="sidebar-nav-link">
                    <div>
                        <i class="fa fa-list" aria-hidden="true"></i>
                    </div>
                    <span>
                        Category
                    </span>
                </a>
            </li>
            <li class="sidebar-nav-item">
                <a href="/admin/tag" class="sidebar-nav-link">
                    <div>
                        <i class="fa fa-tags" aria-hidden="true"></i>
                    </div>
                    <span>Tags</span>
                </a>
            </li>
            <li class="sidebar-nav-item">
                <a href="/admin/post" class="sidebar-nav-link">
                    <div>
                        <i class="fa fa-book" aria-hidden="true"></i>
                    </div>
                    <span>Posts</span>
                </a>
            </li>
            <li class="sidebar-nav-item">
                <a href="/admin/user" class="sidebar-nav-link">
                    <div>
                        <i class="fa fa-users" aria-hidden="true"></i>
                    </div>
                    <span>Users</span>
                </a>
            </li>
        </ul>
    </div>
    <!-- end sidebar -->
    <!-- main content -->
    <div class="wrapper">
        {{#if this.empty}}
        <div class="table-title">
            <h3>Nhãn này không thuộc bài viết nào.</h3>
        </div>
        {{else}}
        <div class="table-title">
            <h3>Danh sách bài viết có chứa nhãn <b style="color: green;">{{this.tag.name}}</b></h3>
        </div>
        <br><br>
        <div>
            <a class="btn success" href="/admin/tag_post/add/{{this.tag.id}}" role="button">
                <i class="fa fa-plus" aria-hidden="true"></i>
                Gắn nhãn vào bài viết
            </a>
        </div>
        <br><br>
        <table class="table-fill">
            <thead>
                <tr>
                    <th class="text-left">Tên bài viết</th>
                    <th class="text-left=">Tình trạng</th>
                    <th class="text-left">&nbsp;</th>
                </tr>
            </thead>
            <tbody class="table-hover">
                {{#each this.tag_post}}
                <tr>
                    <td class="text-left">{{title}}</td>
                    <form method="POST">
                        <input hidden name="id" value="{{tpid}}">
                        {{#if delete}}
                        <td class="text-center">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </td>
                        <td class="text-right">
                            <button type="submit" title="Mở khóa" formaction="/admin/tag_post/restore">
                                <i class="fa fa-refresh" aria-hidden="true"></i>
                            </button>
                        </td>
                        {{else}}
                        <td class="text-center">
                            <i class="fa fa-unlock" aria-hidden="true"></i>
                        </td>
                        <td class="text-right">
                            <button type="submit" title="Khóa" formaction="/admin/tag_post/del">
                                <i class="fa fa-recycle" aria-hidden="true"></i>
                            </button>
                        </td>
                        {{/if}}
                    </form>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
    </div>
    <!-- end main content -->
    <!-- import script -->
    <script src="/public/js/admin.js"></script>
    <!-- end import script -->
</body>

</html>