{{#section 'css'}}

<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css">

{{/section}}
<!-- main content -->
<div class="wrapper">
    {{#if this.empty}}
    <div class="table-title">
        <h3>Bài viết này không có nhãn nào.</h3>
    </div>
    {{else}}
    <div class="table-title">
        <h3>Danh sách nhãn gắn trong bài viết <b style="color: green;"></b></h3>
    </div>
    <br><br>
    <div>
        <a class="btn success" href="/admin/post_tag/add/{{this.post.id}}" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Gắn thêm nhãn vào bài viết
        </a>
    </div>
    <br><br>
    <table class="table-fill">
        <thead>
            <tr>
                <th class="text-left">Tên nhãn</th>
                <th class="text-left=">Tình trạng</th>
                <th class="text-left">&nbsp;</th>
            </tr>
        </thead>
        <tbody class="table-hover">
            {{#each this.tag_posts}}
            <tr>
                <td class="text-left">{{tagname}}</td>
                <form method="POST">
                    <input hidden name="id" value="{{id}}">
                    {{#if delete}}
                    <td class="text-center">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </td>
                    <td class="text-right">
                        <button type="submit" title="Mở khóa nhãn này" formaction="/admin/tag_post/restore">
                            <i class="fa fa-refresh" aria-hidden="true"></i>
                        </button>
                    </td>
                    {{else}}
                    <td class="text-center">
                        <i class="fa fa-unlock" aria-hidden="true"></i>
                    </td>
                    <td class="text-right">
                        <button type="submit" title="Khóa nhãn này" formaction="/admin/tag_post/del">
                            <i class="fa fa-recycle" aria-hidden="true"></i>
                        </button>
                    </td>
                    {{/if}}
                </form>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}
    <div>
        <a class="btn btn success" href="/admin/post" role="button">
            <i class="fa fa-backward" aria-hidden="true"></i>
            Trở về
        </a>
    </div>
</div>
<!-- end main content -->